@page
@model RazorPagesRental.Pages_Rentals.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Rentals</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].CustomerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].CarId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].RentalStartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].RentalEndDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rentals[0].TotalCost)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Rentals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CarId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RentalEndDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalCost)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
